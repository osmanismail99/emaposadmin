@using EmaPosAdminProject.Customs
@using EmaPosAdminProject.Models.Entity
@model reference
@{
    ViewBag.Title = "ReferansGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Referansı Düzenleme</h6>
        <a class="btn btn-primary" href="/Referanslar/ReferanslarListesi">< Geri Dön</a>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            @using (Html.BeginForm("ReferansGuncelle", "Referanslar", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                @Html.TextBoxFor(x => x.id, new { @class = "form-control", @readonly = "readonly", type = "hidden" })
                <p class="text-dark">Sıra Numarası</p>
                @Html.TextBoxFor(x => x.orderNumber, new { @class = "form-control", required = "true", type = "number" })
                <br />
                <p class="text-dark">Adı</p>
                @Html.TextBoxFor(x => x.title, new { @class = "form-control", required = "true" })
                <br />
                <p class="text-dark">Facebook</p>
                @Html.TextBoxFor(x => x.facebook, new { @class = "form-control" })
                <br />
                <p class="text-dark">Instagram</p>
                @Html.TextBoxFor(x => x.instagram, new { @class = "form-control" })
                <br />
                <p class="text-dark">Website</p>
                @Html.TextBoxFor(x => x.website, new { @class = "form-control" })
                <br />
                <p class="text-dark">Mevcut Görsel</p>
                <img src="~/Images/References/@Model.image" style="width: 200px; height: 200px;" />
                <br />
                <br />
                <p class="text-dark">Yeni Görsel</p>
                @Html.TextBoxFor(x => x.image, new { @class = "form-control", type = "file", accept = ".jpg,.png,.gif,.JPEG,.jpeg", name = "image", onchange = "PreviewImage();", id = "uploadImage" })
                <br />
                <img id="uploadPreview" style="width: 200px; height: 200px;" />
                <script type="text/javascript">

                    function PreviewImage() {
                        var oFReader = new FileReader();
                        oFReader.readAsDataURL(document.getElementById("uploadImage").files[0]);

                        oFReader.onload = function (oFREvent) {
                            document.getElementById("uploadPreview").src = oFREvent.target.result;
                        };
                    };

                </script>
                <br />
                <br />
                @Html.Submit("Güncelle", new { @class = "btn btn-success" })
                <a class="btn btn-primary" href="/Referanslar/ReferanslarListesi">< Geri Dön</a>

            }

        </div>
    </div>
</div>
