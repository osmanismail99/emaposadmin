@using EmaPosAdminProject.Customs
@model EmaPosAdminProject.ViewModel.ProductImages
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.Product.title Ürünü Düzenleme</h6>
        <a class="btn btn-primary" href="/Urun/UrunlerListesi">< Geri Dön</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @using (Html.BeginForm("UrunGuncelle", "Urun", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @*<p class="text-dark">ID</p>*@
                @Html.TextBoxFor(x => x.Product.id, new { @class = "form-control", @readonly = "readonly", type = "hidden" })
                <br />
                <p class="text-dark">Ürün Adı</p>
                @Html.TextBoxFor(x => x.Product.title, new { @class = "form-control", required = "true" })
                <br />
                <p class="text-dark">Kategori</p>
                <select class="form-control" name="id" required>
                    <option value="@Model.Product.categoryId">@Model.Product.category.name</option>
                    @foreach (var item in ViewBag.category)
                    {
                        <option value="@item.id">
                            @item.name
                        </option>
                    }

                </select>
                <br />
                <p class="text-dark">Ürün Detayı</p>
                @Html.TextAreaFor(x => x.Product.text, 5, 1, new { @class = "form-control", id= "summernote" })
                <br />

                @Html.Submit("Güncelle", new { @class = "btn btn-success" })
                <a class="btn btn-primary" href="/Urun/UrunlerListesi">< Geri Dön</a>

            }

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script>
    $('#summernote').summernote({
        placeholder: 'Hello stand alone ui',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>

