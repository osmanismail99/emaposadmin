@model EmaPosAdminProject.ViewModel.Home.Index

@{
    ViewBag.Title = "Home Page";
}



<!-- Carousel Start -->
<div class="container-fluid p-0">
    <div id="header-carousel" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            @foreach (var x in Model.IndexCarouselList)
            {
                <div class="carousel-item @(x == Model.IndexCarouselList.First() ? "active" : "")">
                    <img class="w-100" src="~/Images/Slider/@x.image" alt="Image">
                    <div class=" d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase mb-md-3"></h4>
                            <h1 class="display-3 text-white mb-md-4"></h1>

                        </div>
                    </div>
                </div>
            }
        </div>

        <a class="carousel-control-prev" href="#header-carousel" data-slide="prev" to style="width:70px;">
            <div class="btn btn-dark" to style="width: 45px; height: 45px;">
                <span class="carousel-control-prev-icon mb-n2"></span>
            </div>
        </a>
        <a class="carousel-control-next" href="#header-carousel" data-slide="next" to style="width:70px;">
            <div class="btn btn-dark" style="width: 45px; height: 45px;">
                <span class="carousel-control-next-icon mb-n2"></span>
            </div>
        </a>
    </div>
</div>
<!-- Carousel End -->
