                                @x.title <span style="font-size:x-large"></span>
                            </h3>
                            <p style="font-size:small; padding-left:10px;padding-right:10px;">@x.shortText</p>
                            <div class="text-white">
                                <a class="btn btn-danger" href="/Home/ServiceDetail/@x.id">İncele></a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
</div>
<!-- Service End -->
