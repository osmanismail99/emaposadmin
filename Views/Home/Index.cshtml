<!-- Who Are We Start-->
<div class="container-fluid py-5">
    <div>
        <div class="row">
            <div class="col-lg-6" @*style="min-height: 500px;"*@>
                <div class="position-relative h-100">
                    <img class="img-fluid w-100 h-100" src="~/Images/WhoAreWe/@Model.IndexWhoAreWe.image" style="object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-6 pt-5 pb-lg-5">
                <div class="about-text bg-white p-4 p-lg-5 my-lg-5">
                    <h2 class="text-primary text-uppercase" style="letter-spacing: 5px;">@Model.IndexWhoAreWe.title</h2>
                    <h3 class="mb-3">@Model.IndexWhoAreWe.shortText</h3>
                    <p>
                        @Model.IndexWhoAreWe.text
                    </p>
                    <a href="/Home/Contact" class="btn btn-danger mt-1">Bizimle İletişime Geçin</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Who Are We End-->
<!-- News Start -->
<div class="container-fluid py-5">

    <div class="text-center mb-3 pb-3">
        <h3 class="text-primary text-uppercase" style="letter-spacing: 5px;">HABERLER</h3>
        <h1></h1>
    </div>
    <div class="owl-carousel testimonial-carousel">
        @foreach (var x in Model.News)
        {
            <div class="text-center pb-4" style="">
                <img class="img-fluid mx-auto" style="height:230px" src="~/Images/News/@Model.NewsImage.Find(img=>x.id==img.newsId).image">
                <div class="blog-date">
                    <h6 class="font-weight-bold mb-n1">@x.date.Value.ToString("dd")</h6>
                    <small class="text-white text-uppercase">@x.date.Value.ToString("MMMM")</small>
                </div>
                <div class="testimonial-text bg-white p-4 mt-n5">
                    <p class="mt-5">
                        @(x.text.Length>30 ? x.text.Substring(0,30) : x.text)...
                    </p>
                    <a class="btn btn-outline-danger" href="/Home/NewsDetail/@x.id">Devamını Oku</a>
                </div>
            </div>
        }
    </div>
</div>
<!-- News End -->
<!-- Service Start -->
<div class="container-fluid py-5">
    <div>
        <div class="text-center mb-3 pb-3">
            <h3 class="text-primary text-uppercase" style="letter-spacing: 5px;">Sektörel Çözümler</h3>
            <h5>(Otomatik Tanımlama / Veri Toplama) teknolojilerinin en yaygın uygulamaları olan Barkod çözümleri alanında fark yaratan ürün ve projeler sunmaktayız.</h5>
        </div>
        <div class="owl-carousel testimonial-carousel">
            @foreach (var x in Model.SectorList)
            {
                <div class="text-center pb-4">
                    <div class="destination-item position-relative overflow-hidden mb-2">
                        <img class="img-fluid" src="~/Images/Sector/@x.image" style="height:250px;" alt="">
                        <div class="destination-overlay text-white text-decoration-none" href="">
