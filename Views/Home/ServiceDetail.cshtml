<!-- Header Start -->
<div class="container-fluid page-header" style="height: 250px;">
    <div class="container" style="height: 250px;">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 250px;">
            <h3 class="display-4 text-white text-uppercase">@Model.Sector.title</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="/Home/Index">Ana Sayfa</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase"><a class="text-white" href="/Home/Hardware">@Model.Sector.title</a></p>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->
<!--Service Detail Start-->
<div class="container-fluid py-5">
    <div>
        <div class="row">
            <div class="col-lg-6" style="min-height: 500px;">
                <div class="position-relative h-100">
                    <img class="position-absolute w-100 h-100" src="~/Images/Sector/@Model.Sector.image" style="object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-6 pt-5 pb-lg-5">
                <div class="about-text bg-white p-4 p-lg-5 my-lg-5">
                    <h2 class="text-primary text-uppercase" style="letter-spacing: 5px;">@Model.Sector.title</h2>

                    <p>
                        @Model.Sector.text
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>
<!--Service Detail End-->
